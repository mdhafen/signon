function auth_to_google( $redirect = null ) {
  global $GOOGLE_A_CLIENT;
  /* no workie
     $request = $GOOGLE_S_CLIENT->getIo()->authenticatedRequest(
        new Google_HttpRequest(
        // Google_OAuth2::OAUTH2_TOKEN_URI, 'POST', array(), array(
